<!DOCTYPE html>
<html lang="ja">

<head>
    <meta charset="utf-8">
    <title>
        <%= isEdit ? '編集' : '新規登録' %>
    </title>
    <style>
        body {
            font-family: sans-serif;
            margin: 2rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        input,
        select {
            padding: 0.5rem;
            width: 100%;
            max-width: 400px;
            box-sizing: border-box;
        }

        .error {
            color: red;
        }

        .btn {
            padding: 0.5rem 1rem;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>

<body>
    <h1>
        <%= isEdit ? 'スコア編集' : 'スコア新規登録' %>
    </h1>

    <% if (errors.length> 0) { %>
        <ul class="error">
            <% errors.forEach(e=> { %>
                <li>
                    <%= e %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="<%= isEdit ? '/' + values.id + '/update' : '/create' %>" method="POST">
                <div class="form-group">
                    <label>タイトル</label>
                    <input type="text" name="title" value="<%= values.title || '' %>" required>
                </div>
                <div class="form-group">
                    <label>アーティスト</label>
                    <input type="text" name="artist" value="<%= values.artist || '' %>" required>
                </div>
                <div class="form-group">
                    <label>バージョン</label>
                    <select name="version">
                        <% VERSIONS.forEach(v=> { %>
                            <option value="<%= v %>" <%=values.version===v ? 'selected' : '' %>><%= v %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>難易度</label>
                    <select name="difficulty">
                        <% DIFFICULTIES.forEach(d=> { %>
                            <option value="<%= d %>" <%=values.difficulty===d ? 'selected' : '' %>><%= d %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>レベル (1-12)</label>
                    <input type="number" name="level" value="<%= values.level %>" min="1" max="12" required>
                </div>
                <div class="form-group">
                    <label>スコア (0-4000)</label>
                    <input type="number" name="score" value="<%= values.score %>" min="0" max="4000" required>
                </div>
                <div class="form-group">
                    <label>DJレベル</label>
                    <select name="djLevel">
                        <% DJ_LEVELS.forEach(l=> { %>
                            <option value="<%= l %>" <%=values.djLevel===l ? 'selected' : '' %>><%= l %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>ランプ</label>
                    <select name="lamp">
                        <% LAMPS.forEach(l=> { %>
                            <option value="<%= l %>" <%=values.lamp===l ? 'selected' : '' %>><%= l %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label>日付</label>
                    <input type="date" name="date" value="<%= values.date %>">
                </div>

                <button type="submit" class="btn">
                    <%= isEdit ? '更新' : '登録' %>
                </button>
                <a href="/" style="margin-left: 1rem;">キャンセル</a>
            </form>
</body>

</html>